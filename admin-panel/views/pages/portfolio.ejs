<%- include(rootPath + "/views/layout/header.ejs") %>

<div class="row">
    <%- include(rootPath + "/views/layout/sidebar.ejs") %>
    <div class="offset-2 col-10 py-3">
        <h1>Portfolio</h1>
        <table class="table table-bordered mt-5">
            <thead class="table-primary">
                <tr>
                    <th>Name:</th>
                    <th>Image:</th>
                    <th>Category:</th>
                    <th colspan="2">Operations:</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < datas.length; i++) { %>
                    <tr>
                        <td><%= datas[i].name %></td>
                        <td class="w-25">
                            <img src="<%= datas[i].img %>" alt="" class="img-fluid">
                        </td>
                        <td><%= datas[i].category %></td>
                        <td>
                            <i class="fa-solid fa-pen-to-square" data-bs-toggle="modal" data-bs-target="#updatePortfolioModal<%= datas[i].id %>"></i>
                            <div class="modal fade" id="updatePortfolioModal<%= datas[i].id %>" tabindex="-1" aria-labelledby="updatePortfolioModal<%= datas[i].id %>Label" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="updatePortfolioModal<%= datas[i].id %>Label">Update Portfolio</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/portfolio/update/<%= datas[i].id %>" method="post" enctype="multipart/form-data" class="container">
                                                <div class="row mt-3">
                                                    <div class="col-4">
                                                        <label for="name">Name:</label>
                                                    </div>
                                                    <div class="col-8">
                                                        <input type="text" name="name" id="name" value="<%= datas[i].name %>" class="form-control" required>
                                                    </div>
                                                </div>
                                                <div class="row mt-3">
                                                    <div class="col-4">
                                                        <label for="img">Image:</label>
                                                    </div>
                                                    <div class="col-8">
                                                        <input type="file" name="img" id="img" class="form-control">
                                                        <div class="form-text"><%= datas[i].img %></div>
                                                    </div>
                                                </div>
                                                <div class="row mt-3">
                                                    <div class="col-4">
                                                        <label for="category">Category:</label>
                                                    </div>
                                                    <div class="col-8">
                                                        <input type="text" name="category" id="category" value="<%= datas[i].category %>" class="form-control" required>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="offset-9 col-3">
                                                        <input type="submit" value="Update" class="btn btn-primary w-100">
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <a href=/portfolio/delete/<%= datas[i].id %>>
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <button type="button" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#addPortfolioModal">Add a Portfolio</button>
        <div class="modal fade" id="addPortfolioModal" tabindex="-1" aria-labelledby="addPortfolioModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="addPortfolioModalLabel">New Portfolio</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/portfolio/add" method="post" enctype="multipart/form-data" class="container">
                            <div class="row mt-3">
                                <div class="col-4">
                                    <label for="name">Name:</label>
                                </div>
                                <div class="col-8">
                                    <input type="text" name="name" id="name" class="form-control" required>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4">
                                    <label for="img">Image:</label>
                                </div>
                                <div class="col-8">
                                    <input type="file" name="img" id="img" class="form-control" required>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4">
                                    <label for="category">Category:</label>
                                </div>
                                <div class="col-8">
                                    <input type="text" name="category" id="category" class="form-control" required>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="offset-9 col-3">
                                    <input type="submit" value="Add" class="btn btn-primary w-100">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include(rootPath + "/views/layout/footer.ejs") %>