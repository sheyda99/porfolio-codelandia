<%- include(rootPath + "/views/layout/header.ejs") %>

<div class="row">
    <%- include(rootPath + "/views/layout/sidebar.ejs") %>
    <div class="offset-2 col-10 py-3">
        <h1>Skills</h1>
        <table class="table table-bordered mt-5">
            <thead class="table-primary">
                <tr>
                    <th>Name:</th>
                    <th>Progress (%):</th>
                    <th colspan="2">Operations:</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < datas.length; i++) { %>
                    <tr>
                        <td><%= datas[i].name %></td>
                        <td><%= datas[i].progress %></td>
                        <td>
                            <i class="fa-solid fa-pen-to-square" data-bs-toggle="modal" data-bs-target="#updateSkillsModal<%= datas[i].id %>"></i>
                            <div class="modal fade" id="updateSkillsModal<%= datas[i].id %>" tabindex="-1" aria-labelledby="updateSkillsModal<%= datas[i].id %>Label" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="updateSkillsModal<%= datas[i].id %>Label">Update Skill</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/skills/update/<%= datas[i].id %>" method="post" class="container">
                                                <div class="row mt-3">
                                                    <div class="col-4">
                                                        <label for="name">Name:</label>
                                                    </div>
                                                    <div class="col-8">
                                                        <input type="text" name="name" id="name" value="<%= datas[i].name %>" class="form-control" required>
                                                    </div>
                                                </div>
                                                <div class="row mt-3">
                                                    <div class="col-4">
                                                        <label for="progress">Progress:</label>
                                                    </div>
                                                    <div class="col-8">
                                                        <input type="number" name="progress" id="progress" value="<%= datas[i].progress %>" class="form-control" min="0" max="100" required>
                                                    </div>
                                                </div>
                                                <div class="row mt-4">
                                                    <div class="offset-9 col-3">
                                                        <input type="submit" value="Update" class="btn btn-primary w-100">
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <a href=/skills/delete/<%= datas[i].id %>>
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <button type="button" class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#addSkillsModal">Add a Skill</button>
        <div class="modal fade" id="addSkillsModal" tabindex="-1" aria-labelledby="addSkillsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="addSkillsModalLabel">New Skill</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/skills/add" method="post" class="container">
                            <div class="row mt-3">
                                <div class="col-4">
                                    <label for="name">Name:</label>
                                </div>
                                <div class="col-8">
                                    <input type="text" name="name" id="name" class="form-control" required>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-4">
                                    <label for="progress">Progress:</label>
                                </div>
                                <div class="col-8">
                                    <input type="number" name="progress" id="progress" class="form-control" min="0" max="100" required>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="offset-9 col-3">
                                    <input type="submit" value="Add" class="btn btn-primary w-100">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include(rootPath + "/views/layout/footer.ejs") %>